    },
    "qrcodes": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$qrId": {
        ".validate": "newData.hasChildren(['name', 'createdAt', 'createdBy'])"
      }
    },
    "admins": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "adminsData": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "signupRequests": {
      ".read": "auth != null",
      ".write": true
    },
    "scoreTypes": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "teams": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$teamId": {
        ".validate": "newData.hasChildren(['name', 'color', 'createdAt', 'createdBy'])"
      }
    },
    "academicYears": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$yearId": {
